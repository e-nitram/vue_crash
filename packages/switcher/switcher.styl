.zi-switcher
  display inline-flex
  align-items center
  background-color var(--geist-background)
  border-radius var(--geist-radius)
  border 1px solid var(--accents-2)
  overflow hidden
  color var(--geist-foreground)

  a
    color inherit
    font-size rem(12)
    height rem(28)
    line-height rem(28)
    cursor pointer
    display flex
    justify-content center
    align-items center
    padding rem(1.2) rem(12)
    min-width rem(76)
    user-select none
    transition background-color .12 ease
    position relative
    text-decoration none

    &::after
      position absolute
      height 100%
      top 0
      bottom 0
      right 0
      content ''
      border-right 1px solid var(--accents-2)

    &:last-child::after
      display none

    &:not(.active):hover
      text-decoration none
      background-color var(--accents-1)

    &.active
      text-decoration none
      pointer-events none
      font-weight bold
      background-color var(--accents-1)

.zi-switcher-content
  width 100%
  margin-top 10px
