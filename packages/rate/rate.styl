.zi-rate
  height rem(20)
  line-height 1

  &.disabled
    .zi-rate-icon
      cursor default

.zi-rate-icon
  width rem(18)
  height rem(18)
  cursor pointer
  color var(--accents-3)
  margin-right rem(8)
  transition all .12s ease-in

  &:not(.active):not(.disabled):hover
    color var(--accents-5)

  &:not(.active):not(.disabled).hover
    color var(--accents-5)

  &.active
    color var(--geist-warning)
    fill var(--geist-warning)
